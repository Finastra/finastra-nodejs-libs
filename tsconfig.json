{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@finastra/nestjs-oidc": [
        "libs/oidc/src"
      ],
      "@finastra/nestjs-oidc/*": [
        "libs/oidc/src/*"
      ],
      "@finastra/nestjs-proxy": [
        "libs/proxy/src"
      ],
      "@finastra/nestjs-proxy/*": [
        "libs/proxy/src/*"
      ],
      "@finastra/api_corporate-accounts": [
        "libs/ffdc-apis/corporate-accounts/src"
      ],
      "@finastra/api_corporate-accounts/*": [
        "libs/ffdc-apis/corporate-accounts/src/*"
      ],
      "@finastra/nestjs-logger": [
        "libs/logger/src"
      ],
      "@finastra/nestjs-logger/*": [
        "libs/logger/src/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}